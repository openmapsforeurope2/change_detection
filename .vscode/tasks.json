{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build package",
            "type": "shell",
            "command": "docker run --privileged -v ${workspaceFolder}:/usr/local/src/change_detection change_detection ./build-unix-package.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "docker run --privileged -v ${workspaceFolder}:/usr/local/src/change_detection change_detection ./build-unix-release.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "docker run --privileged -v ${workspaceFolder}:/usr/local/src/change_detection change_detection ./build-unix-debug.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        // {
        //     "label": "clean (in container)",
        //     "type": "shell",
        //     "command": "docker run --privileged -v c:/vsc_docker_cc_gdb/:/root vsc_docker_cc_gdb make clean",
        //     "group": "build",
        //     "problemMatcher": []
        // },
        {
            "label": "remove containers",
            "type": "shell",
            "command": "docker rm -f $(docker ps -a -q)",
            "problemMatcher": []
        },
        {
            "label": "run the code (compute diff)",
            "type": "shell",
            "command": "docker run --privileged -v ${workspaceFolder}:/usr/local/src/change_detection change_detection ./bin/change_detection --c /usr/local/src/change_detection/config/epg_parameters.ini --op diff --T tn --f road_link --cc lu",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "run the code (apply diff)",
            "type": "shell",
            "command": "docker run --privileged -v ${workspaceFolder}:/usr/local/src/change_detection change_detection ./bin/change_detection --c /usr/local/src/change_detection/config/epg_parameters.ini --op apply_diff --ref ref --T tn --f road_link --cc lu",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "prepare to debug",
            "type": "shell",
            "command": "docker run --privileged -v ${workspaceFolder}:/usr/local/src/change_detection --name change_detection_container -it change_detection ",
            "group": "build",
            "problemMatcher": []
        }
    ]
}